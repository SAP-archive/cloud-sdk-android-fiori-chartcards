<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="SampleAppTheme" parent="FioriTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:actionMenuTextColor">@color/colorPrimaryDark</item>
    </style>


    <style name="SampleAppTheme.NoActionBar" parent="FioriTheme">
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SampleAppTheme.AppBarOverlay" parent="FioriTheme.AppBarOverlay">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:actionMenuTextColor">@color/colorPrimaryDark</item>
    </style>

</resources>
